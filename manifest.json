{
  "manifest_version": 2,
  "name": "AWS Environment Manager",
  "version": "1.0.2",
  "description": "AWS环境管理器 - 支持Firefox容器和自动TST配置",
  
  "permissions": [
    "storage",
    "tabs",
    "contextualIdentities",
    "cookies",
    "activeTab",
    "<all_urls>"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "AWS Environment Manager"
  },
  
  "applications": {
    "gecko": {
      "id": "aws-env-manager@zoubenjia.com",
      "strict_min_version": "57.0"
    }
  }
}
